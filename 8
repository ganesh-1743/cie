import java.util.Scanner;
class Staff {
        String staffID;
        String name;
        String phone;
        double salary;
        
        Staff(String staffID, String name, String phone, double salary){
            this.staffID=staffID;
            this.name=name;
            this.phone=phone;
            this.salary=salary;
        }
        public void display(){
            System.out.printf("%-10s %-15s %-12s %-10.2f", staffID, name, phone, salary);
        }
}
class Teaching extends Staff{
    String domain;
    int publications;
    
    Teaching(String staffID, String name, String phone, double salary, String domain, int publications){
        super(staffID, name, phone, salary);
        this.domain=domain;
        this.publications=publications;
    }

@Override
public void display() {
     super.display();
     System.out.printf("%-12%-5d\n",domain,publications);
}
}
class Technical extends Staff{
    String skills;
    Technical(String staffID, String name, String phone, double salary, String skills){
        super(staffID, name, phone, salary);
        this.skills=skills;
    }
    @Override
    public void display(){
     super.display();
     System.out.printf("%-15\n",skills);
    }
}
class Contract extends Staff {
    int period;
    
    Contract(String staffID, String name, String phone, double salary, int period){
        super(staffID, name, phone, salary);
        this.period=period;
    }
    @Override
    public void display(){
     super.display();
     System.out.printf("%-5d\n",period);
    }
}               
public class Staffdetail {
    public static void main(String[] args){
        Scanner input=new Scanner(System.in);
        
        Teaching[]teachingStaff=new Teaching[3];
        Technical[]technicalStaff=new Technical[3];
        Contract[]contractStaff=new Contract[3];
        
        System.out.println("Enter details for Teaching Staff:");
        for(int i=0; i<3; i++){
            System.out.print("StaffID:");
            String id=input.nextLine();
            System.out.print("Name:");
            String name=input.nextLine();
            
        System.out.print("Phone:");
                   String phone = input.nextLine();
                   System.out.print("salary:");
                   double salary=input.nextDouble();
                   input.nextLine();
                   System.out.print("Domain:");
                   String domain = input.nextLine();
                   System.out.print("Publications:");
                   int pubs=input.nextInt();
                   input.nextLine();
                   
                   teachingStaff[i]=new Teaching(id, name, phone, salary,domain,pubs);
        }
        System.out.println("Enter details for Teachnical Staff:");
        for(int i=0; i<3; i++){
            System.out.print("StaffID:");
            String id=input.nextLine();
            System.out.print("Name:");
            String name=input.nextLine();
            
        System.out.print("Phone:");
                   String phone = input.nextLine();
                   System.out.print("salary:");
                   double salary=input.nextDouble();
                   input.nextLine();
                   System.out.print("Skills:");
                   String skills = input.nextLine();
                   
                   technicalStaff[i]=new Technical(id, name, phone, salary, skills);
          }
        System.out.println("\nEnter details for Contract Staff:");
        for(int i=0; i<3; i++){
            System.out.print("StaffID:");
            String id=input.nextLine();
            System.out.print("Name:");
            String name=input.nextLine();
            
        System.out.print("Phone:");
                   String phone = input.nextLine();
                   System.out.print("salary:");
                   double salary=input.nextDouble();
                   System.out.print("Period(months):");
                   int period=input.nextInt();
                   input.nextLine();
                   
                  contractStaff[i]=new Contract(id, name, phone, salary, period);
        }
        System.out.println("\n---Teaching Staff---");
        System.out.printf("%-10%-15s%-12s%-10s%-12s%-5s\n","ID", "Name","Phone","Salary","Domain","Pubs");
        for(Teaching t:teachingStaff){
            t.display();
        }
        System.out.println("\n---Technical Staff---");
        System.out.printf("%-10%-15s%-12s%-10s%-15s\n","ID", "Name","Phone","Salary", "skills");
        for(Technical tech : technicalStaff){
            tech.display();
        }
        System.out.println("\n---Contract Staff---");
        System.out.printf("%-10%-15s%-12s%-10s%-5s\n","ID", "Name","Phone","Salary", "Period");
        for(Contract c : contractStaff){
            c.display();
        }
        input.close();
    }
}
